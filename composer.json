{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.5.1",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.5.1.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "require": {
        "wordpress": "^4.5",
        "fancyguy/webroot-installer": "1.0.0"
    },
    "extra": {
        "webroot-dir": "web/wp",
        "webroot-package": "wordpress"
    },
    "scripts": {
        "post-install-cmd": [
            "cp -Rn web/wp/index.php web/index.php",
            "cp -n dist/wp-config.php web/wp-config.php",
            "sed -i 's/wp/wp\\/wp/' web/index.php"
        ]
    }
}
